<Window x:Class="TestRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestRunner"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="500">
    <Grid>
        <StackPanel>
            <Label Content="Группа"/>
            <ComboBox x:Name="groupComboBox" SelectionChanged="GroupComboBox_SelectionChanged"/>
            <Label Content="ФИО"/>
            <ComboBox x:Name="nameComboBox"/>
            <Label Content="Аттестация"/>
            <ComboBox x:Name="testTypeComboBox"/>
            <Button Content="Начать тестирование" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
