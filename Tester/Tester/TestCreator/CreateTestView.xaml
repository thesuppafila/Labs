<Window x:Class="Tester.CreateTestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tester"
        mc:Ignorable="d"
        Title="Редактирование теста" Height="450" Width="800" WindowStartupLocation="CenterScreen" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content= "Тест" Grid.Row="0" HorizontalAlignment="Center"/>
            <TextBox x:Name="testNameTextBox" Grid.Row="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Список вопросов" Grid.Row="2" HorizontalAlignment="Center"/>
            <ListBox x:Name="questionsListBox" Grid.Row="3"
                             ItemsSource="{Binding Questions}"
                             SelectedItem="{Binding SelectedQuestion}"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="addQuestionButton" Grid.Column="0" Content="Добавить" 
                            Command="{Binding AddNewQuestion}"/>
            <Button x:Name="addQuestionFromFileButton" Grid.Column="1" Content="Добавить из файла" 
                            Command="{Binding LoadQuestionFromFile}" />
            <Button x:Name="removeSelectedQuestionButton" Grid.Column="2" Content="Удалить" 
                            Command="{Binding RemoveQuestion}"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid DataContext="{Binding SelectedQuestion}" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Label Content="Вопрос" Grid.Row="0"/>
                <TextBox x:Name="questionTextBlock" Grid.Row="1" Text="{Binding Body, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Варианты ответа" Grid.Row="2"/>
                <ListBox x:Name="answersListBox" Grid.Row="3" ItemsSource="{Binding Answers}"/>
                <Label Grid.Row="4" Content="Ответы"/>

                <ListBox x:Name="trueAnswersListBox" Grid.Row="5" ItemsSource="{Binding TrueAnswers, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" MinHeight="100"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="cancelButton" Grid.Column="0" Content="Отмена" 
                            Command="{Binding CancelCommand}" 
                            HorizontalAlignment="Right" MinWidth="100"/>
            <Button x:Name="saveButton" Grid.Column="1" Content="Сохранить" 
                            Command="{Binding OKCommand}" 
                            HorizontalAlignment="Right" MinWidth="100"/>
        </Grid>
    </Grid>
</Window>
